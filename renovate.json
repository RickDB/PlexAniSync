{
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Berlin",
  "automerge": true,
  "rebaseWhen": "conflicted",
  "pip_requirements": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:monthly"]
  },
  "dockerfile": {
    "extends": ["schedule:monthly"]
  },
  "github-actions": {
    "extends": ["group:all"],
    "branchTopic": "github-actions",
    "commitMessageTopic": "github-actions"
  }
}
